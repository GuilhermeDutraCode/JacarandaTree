<%= form_for @item do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :price%>
    <%= f.text_field :price%>

    <%= f.label :image, "paste URl with items photo" %>
    <%= f.url_field :image %>

    <%= f.select :category_id, Category.pluck(:name, :id) %>

    
    <%= f.submit %>
<% end %>