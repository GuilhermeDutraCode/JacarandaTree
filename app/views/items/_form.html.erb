<div class="form-group">
    <%= form_for @item do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name, :required => true %>
<div>
<div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
</div>
<div class="form-group">
        <%= f.label :price%>
        <%= f.text_field :price%>
<div>
<div class="form-group">
        <%= f.label :image, "paste URl with items photo" %>
        <%= f.url_field :image %>
<div>
<div class="form-group">
        <%= f.label :category_id, "Select a category:"%>
        <%= f.select :category_id, Category.pluck(:name, :id) %>
<div>
    
    <%= f.submit %>
<% end %>
